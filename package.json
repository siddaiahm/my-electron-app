{
  "name": "mantis-dashboard",
  "version": "0.1.0",
  "productName": "Mantis Dashboard App",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "description": "Mantis Dashboard App",
  "author": {
    "name": "Siddaiah M"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "my-electron-app",
      "owner": "siddaiah"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^4.4.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "antd": "^4.10.3",
    "electron-reload": "^1.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "react-svg": "^11.2.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "lin-start": "export BROWSER=none && react-scripts start",
    "win-start": "set BROWSER=none && react-scripts start",
    "build": "react-scripts build",
    "watch-css": "sass --watch src/react/assets/style/index.scss:src/react/assets/style/index.css",
    "start-electron-win": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "start-electron-lin": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
    "lin-build-electron": "mkdir build/src && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared",
    "win-build-electron": "mkdir build/src && robocopy electron/. build/electron  && robocopy src/shared/. build/src/shared",
    "package": "electron-builder build -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "sass": "^1.32.5"
  }
}
